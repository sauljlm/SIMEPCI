@page
@model LoginModel
@{
    Layout = null;
}
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SIMEPCI</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/pages/login.js"></script>
</head>

<img class="ImgBackground" src="~/assets/backgroundSIMEPCI.png" alt="Imagen con decoraciones onduladas para el fondo de SIMEPCI" />
<div class="position-absolute" style="bottom: 2rem; right: 2rem; cursor: pointer;">
    <a asp-page="Index">
        <i class="bi bi-box-arrow-left" style="color: #0353A4; font-size: 2rem;"></i>
    </a>
</div>


<div class="w-100 h-100 d-flex justify-content-center align-items-center flex-column">
    <h2 class="text-white font-weight-light">Bienvenidos a</h2>
    <h2 class="text-white ">SIMEPCI</h2>
    <div class="GeneralBox" id="LoginContent">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="IconUser">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>

        <form class="d-flex align-items-center flex-column" id="LoginForm">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="IconInput">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                        </svg>
                    </span>
                </div>
                <input type="text" class="form-control" placeholder="Identificación" aria-label="Identificacion" id="identificacion" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="IconInput">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                        </svg>
                    </span>
                </div>
                <input type="password" class="form-control" placeholder="Contraseña" aria-label="Contraseña" id="contrasenna" aria-describedby="basic-addon1">
            </div>

            <button type="submit" class="btn btn-primary IniciarButton">Iniciar</button>
        </form>

        <div class="d-flex align-items-center">
            <span class="Linedeco"></span>
            <p class="ODeco">O</p>
            <span class="Linedeco"></span>
        </div>

        <p class="ForgotPassword" id="ForgotButton">¿Olvidó su contraseña?</p>
        <a href="/RegistroUsuario" class="LinkRegis">Regístrate</a>
    </div>

    <div class="ForgotBox GeneralBox d-none" id="ForgotContent">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="IconUser">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>
        <button id="BackButton">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="backicon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
            </svg>
        
        </button>
        

        <form id="ForgotForm" class="d-flex align-items-center flex-column">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="IconInput">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                        </svg>
                    </span>
                </div>
                <input type="text" class="form-control" placeholder="Identificación" aria-label="Identificación" id="ForgotId" aria-describedby="basic-addon1">
            </div>
            <button type="submit" class="btn btn-primary IniciarButton">Recuperar contraseña</button>
        </form>
    </div>
</div>


<div class="LoadPage d-none" id="LoadState">

    <span class="loader"></span>
    <p>Cargando</p>

</div>

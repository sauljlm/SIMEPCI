<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SIMEPCI</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/sede.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/controlactions.js"></script>


    <!-- Incluir el archivo CSS de Bootstrap desde la CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Incluir el archivo Cloudinary -->
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/cloudinary-core/2.5.0/cloudinary-core-shrinkwrap.min.js"></script> -->
    <!-- Incluir el archivo CSS de Font Awesome desde la CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Incluir el archivo JS de Font Awesome desde la CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

</head>
<body class="MainWrapper">
    <header>
        <nav class="vertical-menu-wrapper">
            <div class="vertical-menu-logo">
                <div><img id="LogoSIMEPCI" src="https://i.imgur.com/KNLtoSa.png" alt="Logo SIMEPCI" style="width:150px" /></div>
                <span class="open-menu-btn"><hr class="closedhr"><hr class="prinhr"><hr class="closedhr"></span>
            </div>
            <ul class="vertical-menu opacity-0" id="NavSIMEPCI">
                <li><a asp-page="Perfil">Perfil</a></li>
                <li><a asp-page="Usuario">Usuarios</a></li>
                <li><a asp-page="Expedientes">Expedientes</a></li>
                <li><a asp-page="Sede">Sede</a></li>
                <li><a asp-page="AgendarCita">Agendar Cita</a></li>
                <li><a asp-page="CrearCupos">Crear cupos</a></li>
                <li><a asp-page="GestionCupos">Gestionar cupos</a></li>
                <li><a asp-page="MisCitas">Mis Citas</a></li>
                <li><a asp-page="ProximasConsultas">Próximas Consultas</a></li>
                <li><a asp-page="CrearRecetas">Crear Recetas</a></li>
                <li><a asp-page="MisRecetas">Mis Recetas</a></li>
                <li><a asp-page="Recetas">Recetas</a></li>    
                <li><a asp-page="ReporteCalidad">Reporte de calidad</a></li>
                <li><a asp-page="ReporteFinanciero">Reporte financiero</a></li>
                <hr />
                <li><a asp-page="Configuracion">Configuración</a></li>
                <li>
                    <a id="aCerrarSesion">
                        Cerrar sesión <i class="bi bi-box-arrow-left" style="width:100px;"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="PerfilUsuario">
            <a asp-page="Perfil"><img id="avataruser" src="" alt="foto de perfil" /></a>
            <a asp-page="Perfil" id="NombreUsuario"></a>
        </div>
    </header>

    <div class="content-wrapper">
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <footer class="d-flex flex-wrap justify-content-center align-items-center border-top">
        <a asp-page="Perfil" class="mt-3 col-md-12 d-flex align-items-center justify-content-center mb-md-0 me-md-auto link-dark text-decoration-none">
            <div><img id="LogoSIMEPCI" src="https://i.imgur.com/KNLtoSa.png" alt="Logo SIMEPCI" style="width:150px" /></div>
            <p class="mb-0 fw-normal ms-2" style="color:#0353A4;">&copy; 2024 SIMEPCI, Inc</p>
        </a>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<script src="~/js/site.js"></script>
</html>
                            </div>

                            <div class="col-md-7">
                                <!-- data table Diagnosticos-->
                                <div class="row">
                                    <div class="col-lg-12">                                        
                                            <table id="tblDiagnosticos" class="display table table-striped table-bordered" style="width: 100%">
                                                <thead>
                                                    <tr>
                                                        <th>Doctor(a)</th>
                                                        <th>Diagnóstico</th>
                                                        <th>Descripción</th>
                                                        <th>Fecha de Diagnóstico</th>
                                                        <th>IdCita</th>

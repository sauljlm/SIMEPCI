                    <div class="row">
                        <div class="text-left mt-5">
                            <button id="btnVolverNotaEnfermeria" class="botonFlecha" type="button" tabindex="0"><i class="fas fa-arrow-left"></i></button>
                        </div>
                    </div>
                </div>
                <!--RegistroCitas-->
                
                <div class="card-body" id="cardRegistroCitas">
                    <p style="font-size:26px" class="mb-3">Registro de Citas</p>
                    <form id="formRegistroCita">
                        <div class="row">
                            <div class="col-md-5 align-items-center flex-column d-flex h-100">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtNombreDoctor">Nombre del Doctor</label>
                                            <input type="text" class="form-control inputSIMEPCI" id="txtNombreDoctor" readonly />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtNombreSede">Nombre de la Sede</label>
                                            <input type="text" class="form-control inputSIMEPCI" id="txtNombreSede" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtEspecialidad">Especialidad</label>
                                            <input type="text" class="form-control inputSIMEPCI" id="txtEspecialidad" readonly />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtFechaCita">Fecha de la Cita</label>
                                            <input type="datetime" class="form-control inputSIMEPCI" id="txtFechaCita" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <!-- data table RegistroCitas-->
                                <div class="row">
                                    <div class="col-lg-12">
                                        
                                            <table id="tblRegistroCitas" class="display table table-striped table-bordered" style="width: 100%">
                                                <thead>
                                                    <tr>                                                        
                                                        <th>Doctor(a)</th>
                                                        <th>Sede</th>
                                                        <th>Especialidad</th>
                                                        <th>Fecha</th>
                                                        <th>IdCita</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        
                                        <div class="row mt-4 justify-content-left">
                                            <div class="col-lg-2">
                                                <button id="btnRecetas" class="btnSIMEPCI" style="height:40px; width:110px" type="button">Recetas</button>
                                            </div>

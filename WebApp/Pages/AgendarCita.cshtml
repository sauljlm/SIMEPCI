@page
@model WebApp.Pages.AgendarCitaModel
@{
}
<!-- Incluir Moment.js antes de FullCalendar -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.34/moment-timezone-with-data.min.js"></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>

<script src="~/assets/es.global.js"></script>
<script src="~/js/pages/agendarcita.js"></script>
<link href="~/css/fullcalendar.css" rel="stylesheet" />

<h1>Agendar cita</h1>
<div class="container">

    <div class="row">
        <form class="d-flex">
            <select class="form-select me-2 border-2" id="slctEspecialidad" style="border-color:#0353A4; color:dimgray;">
                <option>Especialidad medica</option>
            </select>

            <select class="form-select me-2 border-2" id="slctUbicacion" style="border-color:#0353A4; color:dimgray;">
                <option>Establecimiento de salud</option>
            </select>
            <input class="form-control me-2 border-2" id="inputBuscar" type="search" placeholder="Buscar" style="border-color:#0353A4; color:dimgray;">
            <button class="btn fw-medium" style="border:none; background-color:#0353A4; color:white">Limpiar</button>
        </form>
    </div>
    <div class="row mt-1" id="cuposDisponibles"></div>

    <div id="calendar" style="font-size:15px"></div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #0353A4;">
                    <h5 class="modal-title text-white">Modal title</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container justify-content-center align-items-center row">
                        <div class="col-8">
                            <div class="d-flex flex-row">
                                <i class="bi bi-hospital-fill" style="color:#0353A4;"></i>
                                <p class="fw-semibold ms-1 mb-0" style="color:#0353A4;">Establecimiento de salud</p>
                            </div>
                            <p class="modal-sede">Modal sede</p>

                            <div class="d-flex flex-row">
                                <i class="bi bi-geo-alt-fill" style="color:#0353A4;"></i>
                                <p class="fw-semibold ms-1 mb-0" style="color:#0353A4;">Ubicación</p>

                            </div>
                            <p class="modal-ubicacion">Modal ubicacion</p>

                            <div class="d-flex flex-row">
                                <i class="bi bi-clipboard2-fill" style="color:#0353A4;"></i>
                                <p class="fw-semibold ms-1 mb-0" style="color:#0353A4;">Especialidad</p>
                            </div>
                            <p class="modal-especialidad">Modal especialidad</p>

                            <div class="d-flex flex-row">
                                <i class="bi bi-person-fill" style="color:#0353A4;"></i>
                                <p class="fw-semibold ms-1 mb-0" style="color:#0353A4;">Profesional en salud</p>
                            </div>
                            <p class="modal-doctor">Modal doctor</p>

                            <div class="d-flex flex-row">
                                <i class="bi bi-currency-dollar" style="color:#0353A4;"></i>
                                <p class="fw-semibold ms-1 mb-0" style="color:#0353A4;">Precio</p>
                            </div>
                            <p class="modal-precio">Modal Precio</p>
                        </div>
                        <div class="col-4 d-flex justify-content-center align-items-center">
                            <!-- Añadidas clases d-flex, justify-content-center y align-items-center -->
                            <div class="border rounded-4 shadow-sm" style="border-color:#dedede;">
                                <i class="bi bi-calendar-week-fill px-4" style="color:#0353A4; font-size: 100px;"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center align-items-center">
                    <button id="modal-agendar" type="button" class="btn fw-semibold" style="background-color:#0353A4; color:white">Agendar</button>
                    <button type="button" class="btn fw-semibold" style="background-color:#f27474; color:white" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

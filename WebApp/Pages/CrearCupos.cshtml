@page
@model WebApp.Pages.CrearCuposModel
@{
}
<script src="~/js/pages/crearcupos.js"></script>
<link href="~/css/crearcupos.css" rel="stylesheet" />

<h1>Crear cupos</h1>
<form id="formCrearCupos" class="d-flex justify-content-center align-items-center">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row w-75">            
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="labelTitles" for="slctProfesional">Profesional de la salud</label>
                    <select class="form-select" id="slctProfesional">
                        <option value="">Selecciona al profesional en salud</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label class="labelTitles" for="txtEspecialidad">Especialidad médica</label>
                    <input type="text" class="form-control" id="txtEspecialidad" placeholder="Especialidad" readonly>
                </div>
                <div class="form-group mb-3">
                    <label class="labelTitles" for="slctEstablecimiento">Establecimiento médico</label>
                    <select class="form-select" id="slctEstablecimiento">
                        <option value="">Selecciona el establecimiento de salud</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="labelTitles" for="selectImpuestos">Impuesto</label>
                    <select class="form-select" id="selectImpuestos">
                        <option value="">Selecciona el impuesto</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="labelTitles" for="txtFecha">Fecha de cupos</label>
                    <input type="date" class="form-control" id="txtFecha" placeholder="Fecha">
                </div>
                <div class="form-group mb-3">
                    <label class="labelTitles" for="txtInicio">Inicio de jornada</label>
                    <input type="time" class="form-control" id="txtInicio" placeholder="Inicio de jornada">
                </div>
                <div class="form-group mb-3">
                    <label class="labelTitles" for="txtFinal">Final de jornada</label>
                    <input type="time" class="form-control" id="txtFinal" placeholder="Final de jornada">
                </div>
                <div class="form-group mb-3">
                    <label class="labelTitles" for="precioC">Precio</label>
                    <input type="number" class="form-control" id="precioC" placeholder="Precio">
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center mt-3">
                <button id="btnCreateCupos" type="button" class="rounded-3 text-light border-0 p-2 text-decoration-none w-25">Crear cupos</button>
            </div>
        </div>
    </div>
</form>

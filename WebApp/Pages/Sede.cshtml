@page
@model WebApp.Pages.SedeModel
@{
}
<script src="~/js/pages/distribucion-cr.js"></script>
<script src="~/js/pages/sede.js"></script>
<link href="~/css/sede.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=SUKEYDEAPIAQUI&callback=initMap"></script>

<h1>Sedes</h1>

<body class="bodySede">
     <form id="formRegistro">
        <fieldset>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div id="tarjeta">
                            <div class="card-body" id="registro1">
                                <form>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group" style="display: none;">
                                                        <label for="txtId">Id</label>
                                                        <input type="text" class="form-control" id="txtId" placeholder="Id">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="txtNombre">Nombre</label>
                                                        <input type="text" class="form-control" id="txtNombre" placeholder="Ingresa el nombre" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                            </div>                                         
                                            <div class="form-group">
                                                <label for="map">Selecciona la ubicación en el mapa:</label>
                                                <div id="map" style="height: 320px; border-radius: 10px;"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtDescripcion">Descripción</label>
                                                <textarea style="resize: none;" class="form-control" id="txtDescripcion" rows="3" placeholder="Ingresa una descripción"></textarea>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="txtLatitud">Latitud</label>
                                                        <input type="text" class="form-control" id="txtLatitud" placeholder="Ingresa la latitud" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="txtLongitud">Longitud</label>
                                                        <input type="text" class="form-control" id="txtLongitud" placeholder="Ingresa la longitud" required>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="txtProvincia">Provincia</label>
                                                        <select id="txtProvincia">
                                                            <option value="">Selecciona una provincia</option>
                                                        </select>

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="txtCanton">Cantón</label>
                                                        <select id="txtCanton">
                                                            <option value="">Selecciona un cantón</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="txtDistrito">Distrito</label>
                                                        <select id="txtDistrito">
                                                            <option value="">Selecciona un distrito</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="txtOtrasSennas">Otras Señas</label>
                                                        <textarea style="resize: none;" class="form-control" id="txtOtrasSennas" rows="1" placeholder="Ingresa otras señas"></textarea>
                                                    </div>
                                                </div>

                                            </div>
                                                                                                                                  
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="txtFechaCreacion">Fecha de Creación</label>
                                                        <input type="date" class="form-control" id="txtFechaCreacion" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6" style="display:none;">
                                                    <div class="form-group">
                                                        <label for="txtFotoSede">Foto de la Sede</label>
                                                        <input type="file" class="form-control-file" id="txtFotoSede">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-10">
                                                    <div class="form-group">
                                                        <button id="btnCreate" type="button">Registrar</button>
                                                        <button id="btnUpdate" type="button">Actualizar</button>
                                                        <button id="btnDelete" type="button">Eliminar</button>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <button type="button" class="botonFlecha border-0" onclick="mostrarRegistro2()">
                                                            <i class="fas fa-arrow-right"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                </form>
                            </div>
                            <!-- data table -->
                            <div class="card-body" id="registro2">
                                <div class="row mt-4">
                                    <div class="col-lg-12">
                                        <div class="table-responsive">
                                            <table id="tblSedes" class="display table table-striped table-bordered" style="width: 100%;">
                                                <thead>
                                                    <tr>
                                                        <th scope="col" style="background-color: #0353A4;color: #0353A4;"></th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Id</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Nombre</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Descripcion</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">FechaCreacion</th
                                                        <th scope="col" style="background-color: #0353A4;color: white;"></th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Latitud</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Longitud</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Provincia</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Canton</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">Distrito</th>
                                                        <th scope="col" style="background-color: #0353A4;color: white;">OtrasSennas</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="atras mt-3">
                                    <button type="button" class="botonFlecha border-0" onclick="mostrarRegistro1()">
                                        <i class="fas fa-arrow-left"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

</body>